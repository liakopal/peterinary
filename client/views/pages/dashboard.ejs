<!-- Dashboard Page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/style.css"> <!-- Link to your custom CSS -->
    <title>User Dashboard - Peterinary</title>
</head>
<body>

    <%- include('../partials/navbar') %> <!-- Navigation bar -->

    <div class="dashboard-container">
        <aside class="sidebar">
            <!-- Sidebar content here -->
            <ul>
                <li>Dashboard</li>
                <li>Pet Owner Profile</li>
                <!-- Other sidebar items -->
            </ul>
        </aside>

        <main class="main-content">
            <!-- Main content here -->
            <section class="user-info">
                <h2>User Info</h2>
                <form id="user-profile-form">
                    <!-- User Profile Form -->
                    <label for="userImage">User Image</label>
                    <input type="file" id="userImage" name="userImage">
                    <label for="userName">User Name</label>
                    <input type="text" id="userName" name="userName">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                    <label for="oldPassword">Old Password</label>
                    <input type="password" id="oldPassword" name="oldPassword">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword">
                    <button type="submit">Submit</button>
                </form>
            </section>
        </main>
    </div>

    <%- include('../partials/footer') %> <!-- Footer -->

    <!-- <script src="/js/dashboard.js"></script> Link to your custom JavaScript -->
    <script src="/js/profile.js"></script>
    
    
</body>
</html>
